@model TPLOCAL1.Models.FormModel
@{
    ViewData["Title"] = "Formulaire";
    ViewData["H1"] = "Formulaire TP HN avis";
    ViewData["LienNav1"] = "Index";
    ViewData["NomLien1"] = "Accueil";
    ViewData["LienNav2"] = "ListeAvis";
    ViewData["NomLien2"] = "Liste avis";
}

    <section>
        <form asp-controller="Home" asp-action="ValidationFormulaire" method="POST">
            <table border="1">
                <thead>
                    <tr>
                        <th colspan="2">Informations personnelles</th>
                    </tr>   
                </thead>
                <tbody>
                    <tr>
                        <td>Nom</td>
                        <td><input type="text" asp-for="Nom" /></td>
                        
                    </tr>
                    <tr>
                        <td>Prénom</td>
                        <td><input type="text" asp-for="Prenom" /></td>
                    </tr>
                    <tr>
                        <td>Genre</td>
                        <td>
                            <select asp-for="Genre" id="genre">
                                <option value="Default">Sélectionner un genre</option>
                                <option value="Homme">Homme</option>
                                <option value="Femme">Femme</option>
                                <option value="Autre">Autre</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>Adresse</td>
                        <td><input type="text" asp-for="Adresse" /></td>
                    </tr>
                    <tr>
                        <td>Code Postal</td>
                        <td><input type="text" asp-for="CodePostal" /></td>
                    </tr>
                    <tr>
                        <td>Ville</td>
                        <td><input type="text" asp-for="Ville" /></td>
                    </tr>
                    <tr>
                        <td>Adresse mail</td>
                        <td><input type="text" asp-for="Email" /></td>
                    </tr>
                </tbody>
            </table>
            <br />

            <table border="1">
                <thead>
                    <tr>
                        <th colspan="2">Informations sur la formation suivie</th>
                    </tr>  
                </thead>
                <tbody>
                    <tr>
                        <td>Date début formation</td>
                        <td><input type="date" max="2021-01-01" asp-for="DateDebut" /></td>
                    </tr>
                    <tr>
                        <td>Formation suivie</td>
                        <td>
                            <select asp-for="TypeFormation" id="formation">
                                <option value="Default">Choisissez une formation</option>
                                <option value="Cobol">Formation COBOL</option>
                                <option value="Objet">Formation Objet</option>
                                <option value="Double">Formation Double Compétences</option>
                            </select>
                        </td>
                    </tr>
                </tbody>
            </table>
            <br />

            <table border="1">
                <thead>
                    <tr>
                        <th colspan="2">Avis sur la formation</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Formation COBOL</td>
                        <td><input type="text" asp-for="AvisCobol" /></td>
                    </tr>
                    <tr>
                        <td>Formation C#</td>
                        <td><input type="text" asp-for="AvisCsharp" /></td>
                    </tr>
                </tbody>
            </table>
            <input type="submit" value="Valider"/>
        </form>
    </section>


